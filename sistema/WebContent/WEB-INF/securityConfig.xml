	<security:http use-expressions="false">
		<!-- Mecanismo de autenticación -->
		<security:http-basic/>
		<!-- <security:form-login login-page="/login.jsp" authentication-failure-url="/error.jsp"/> -->
		<!--  Protección de recursos /menu.jsp-->
		<security:intercept-url pattern="/cliente*.jsp" access="ROLE_USER"/>
		<security:intercept-url pattern="/admin*.jsp" access="ROLE_ADMIN"/>
		<security:intercept-url pattern="/alarma/**" method="GET" access="ROLE_USER,ROLE_ADMIN"/>
		<security:intercept-url pattern="/alarmas/**" method="GET" access="ROLE_ADMIN"/>
		<security:csrf disabled="true"/>
	</security:http>
